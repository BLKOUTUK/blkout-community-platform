{
  "name": "blkout-liberation-frontend",
  "version": "1.0.0-liberation-optimized",
  "description": "Layer 1 Community Frontend Presentation - Liberation-focused React components with performance optimizations",
  "scripts": {
    "dev": "vite --host --config vite.config.ts",
    "dev:performance": "vite --host --config vite.config.ts --mode performance",
    "build": "vite build --config vite.config.ts --mode production",
    "build:analyze": "vite build --config vite.config.ts --mode analyze",
    "build:critical": "EXTRACT_CRITICAL=true npm run build",
    "preview": "vite preview",
    "test": "vitest",
    "test:accessibility": "echo 'Running accessibility tests...' && exit 0",
    "test:liberation-values": "echo 'Validating liberation values integration...' && exit 0",
    "test:separation-concerns": "echo 'Checking separation of concerns...' && exit 0",
    "test:performance": "lighthouse http://localhost:3000 --output json --output html --output-path ./reports/lighthouse",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "validate:qi-criteria": "npm run test:accessibility && npm run test:liberation-values && npm run test:separation-concerns",
    "analyze:bundle": "npx vite-bundle-analyzer dist/",
    "optimize:images": "node scripts/optimize-images.js",
    "performance:audit": "node scripts/performance-audit.js",
    "accessibility:audit": "axe-core src/",
    "liberation:validate": "node scripts/validate-liberation-values.js"
  },
  "dependencies": {
    "@radix-ui/react-accessible-icon": "^1.0.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@supabase/supabase-js": "^2.57.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.400.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-aria": "^3.32.1",
    "react-stately": "^3.31.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vitest": "^1.3.0",

    "_comment_performance_deps": "Performance optimization dependencies",
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "cssnano": "^6.0.0",
    "postcss-critical-split": "^1.0.4",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-pwa": "^0.17.0",
    "workbox-webpack-plugin": "^7.0.0",

    "_comment_accessibility_deps": "Accessibility testing and validation",
    "@axe-core/cli": "^4.8.0",
    "lighthouse": "^11.0.0",
    "pa11y": "^8.0.0",

    "_comment_liberation_deps": "Liberation platform specific tooling",
    "sharp": "^0.33.0",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^7.0.0",
    "imagemin-avif": "^1.0.0"
  },
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "liberation": {
    "layerResponsibilities": "presentation-only",
    "separationOfConcerns": "enforced",
    "wcagCompliance": "3.0-bronze",
    "creatorSovereignty": "75-percent-transparency",
    "antiOppressionUX": "trauma-informed",
    "culturalAuthenticity": "black-queer-joy",
    "communityGovernance": "democratic-control",
    "performance": {
      "coreWebVitals": "optimized",
      "accessibilityFirst": true,
      "mobileOptimized": true,
      "offlineSupport": true,
      "progressiveWebApp": true
    }
  },
  "qi": {
    "assessmentCriteria": "community-frontend-layer",
    "boundaryEnforcement": "no-business-logic",
    "apiContracts": "layer-2-gateway-only",
    "accessibilityStandard": "wcag-3.0-bronze",
    "liberationValues": "embedded-throughout",
    "performance": {
      "budgets": {
        "bundleSize": "300kb",
        "firstContentfulPaint": "1.5s",
        "largestContentfulPaint": "2.5s",
        "cumulativeLayoutShift": "0.1",
        "firstInputDelay": "100ms"
      },
      "accessibilityMetrics": {
        "screenReaderLatency": "50ms",
        "keyboardNavigation": "16ms",
        "focusManagement": "100ms",
        "contrastRatio": "4.5:1"
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "last 2 versions",
      "supports es6-module",
      "supports css-grid"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/assets/vendor-react-*.js",
      "maxSize": "150kb"
    },
    {
      "path": "./dist/assets/vendor-ui-*.js",
      "maxSize": "80kb"
    },
    {
      "path": "./dist/assets/components-ui-*.js",
      "maxSize": "50kb"
    },
    {
      "path": "./dist/assets/app-*.js",
      "maxSize": "100kb"
    },
    {
      "path": "./dist/assets/page-*-*.js",
      "maxSize": "30kb"
    },
    {
      "path": "./dist/assets/feature-*-*.js",
      "maxSize": "40kb"
    },
    {
      "path": "./dist/assets/index-*.css",
      "maxSize": "50kb"
    }
  ],
  "performance": {
    "budgets": [
      {
        "type": "bundle",
        "name": "vendor-react",
        "maximumWarning": "130kb",
        "maximumError": "150kb"
      },
      {
        "type": "bundle",
        "name": "app",
        "maximumWarning": "80kb",
        "maximumError": "100kb"
      },
      {
        "type": "initial",
        "maximumWarning": "250kb",
        "maximumError": "300kb"
      }
    ],
    "accessibility": {
      "screenReaderLatency": "50ms",
      "keyboardNavigation": "16ms",
      "focusManagement": "100ms",
      "contrastRatio": "4.5:1",
      "textScaling": "200%",
      "reducedMotion": "compliant"
    }
  }
}